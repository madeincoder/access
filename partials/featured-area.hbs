{{#get "posts" filter="featured:true" limit="all" include="tags,authors"}}
{{#if posts}}
<div class="py-16 mb-24 bg-lightBrown dark:bg-gray-900">
    <div class="container xl:max-w-[1344px] feature">
        <h2 class="font-secondary text-5xl font-normal px-3 text-heading dark:text-white">
            <span>Featured</span>
            <span class="text-primary">
                Podcast
            </span>
        </h2>
        <div class="owl-carousel" data-items='items' data-nav='true' data-autoheight="true" data-responsive='{
            "0":{"nav":true, "items":1, "autoHeight":true},
            "575":{"items":2},
            "768":{"items":3},
            "1024":{"items":4}}'>
            {{#foreach posts}}
            <article class="{{post_class}} article-item flex flex-col group w-full h-full p-3">
                {{#if feature_image}}
                <a href="{{url}}" class="block relative overflow-hidden rounded-xl">
                    {{#has tag="podcast"}}
                        <div class="h-10 w-10 p-2 absolute left-auto top-auto right-5 bottom-5 rounded-full bg-primary text-white z-10">{{> "icons/podcast"}}</div>
                    {{/has}}
                    <img class="w-full h-[280px] object-cover rounded-xl lazy transition-all duration-300 group-hover:scale-105 group-hover:rotate-1 duration-400"
                    srcset="{{img_url feature_image size="xs" }} 470w,
                            {{img_url feature_image size="sm" }} 640w"
                        sizes="(max-width: 640px) 600px, 470px"
                        src="{{img_url feature_image size="xs"}}"
                        alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
                </a>
                {{/if}}
                <div class="px-4 xl:px-5 pb-2 pt-4 xl:pt-5 flex flex-col flex-grow">
                    <div class="{{#if feature_image}}flex-grow{{/if}}">
                        <div class="mb-3 flex flex-wrap items-center">
                            <div class="flex items-center gap-1 post-calendar text-heading dark:text-white">
                                {{> 'icons/calendar'}}
                                <time class="text-sm mr-3" datetime="{{date format="YYYY-MM-DD"}}">
                                    {{date format="DD MMM, YYYY"}}
                                </time>
                            </div>
                            {{#primary_tag}}
                                <a class="text-sm mr-3 py-1 px-2 text-heading inline-block 300 rounded-md dark:text-white relative before:absolute before:w-1 before:h-1 before:bg-[#333333] before:dark:bg-white
                                before:rounded-full before:top-1/2 before:-left-1 before:-translate-y-1/2 hover:text-primary" href="{{url}}">
                                    {{name}}
                                </a>
                            {{/primary_tag}}
                            {{^if feature_image}}
                            {{#has tag="podcast"}}
                            <div class="w-5 text-primary">
                                {{> "icons/podcast"}}
                            </div>
                            {{/has}}
                            {{/if}}
                        </div>
                        <h3 class="text-2xl text-heading dark:text-white">
                            <a href="{{url}}" class="group-hover:underline">{{title}}</a>
                        </h3>
                    </div>
                </div>
            </article>
            {{/foreach}}
        </div>
    </div>
</div>
{{/if}}
{{/get}}