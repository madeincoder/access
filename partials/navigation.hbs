{{#if isSecondary}}
    {{#foreach navigation limit="6"}}
        {{#if @first}}
        <div class="w-1/2 md:w-1/4 lg:flex">
            <div class="footer-widget-navigation p-4">
                <div class="footer-widget">
                    <h4>{{t "Pages"}}</h4>
                    <ul class="nav" role="menu">
                    {{/if}}
                        <li class="nav-{{slug}}" role="menuitem">
                            <a href="{{url}}" class="text-default text-lg hover:text-primary dark:text-white mb-1 font-secondary transition-all dark:hover:text-primary inline-block">
                                {{label}}
                            </a>
                        </li>
                    {{#if @last}}
                    </ul>
                </div>
            </div>
        </div>
        {{/if}}
    {{/foreach}}
    {{#foreach navigation from="7"}}
        {{#if @first}}
        <div class="w-1/2 md:w-1/4 lg:flex">
        <div class="footer-widget-usefull-links p-4">
            <div class="footer-widget">
                <h4>{{t "Important Link"}}</h4>
                <ul class="nav" role="menu">
                {{/if}}
                    <li class="nav-{{slug}}" role="menuitem">
                        <a href="{{url}}" class="text-default text-lg hover:text-primary dark:text-white mb-1 font-secondary transition-all dark:hover:text-primary inline-block">
                            {{label}}
                        </a>
                    </li>
                {{#if @last}}
                </ul>
            </div>
        </div>
        </div>
        {{/if}}
    {{/foreach}}
{{else}}
    <ul class="nav lg:flex flex-wrap" role="menu">
        {{#foreach navigation}}
            <li class="my-0 lg:mx-4 xl:mx-5 {{link_class for=(url) class=(concat "nav-" slug)}}" role="menuitem">
                <a class="hover:text-primary dark:hover:text-primary" href="{{url absolute="true"}}">{{label}}</a>
            </li>
        {{/foreach}}
        {{!-- {{#foreach navigation from="6"}}
        {{#if @first}}
