<div class="text-center">
    <div class="flex flex-wrap justify-center items-center mb-2">
        {{#primary_author}}
        <div class="flex justify-center mb-3 mr-4">
            <a href="{{url}}" title="{{name}}" class="my-1 primary-author text-heading dark:text-white flex items-center justify-center ">
                {{#if profile_image}}
                    <img class="mr-1 rounded-full object-cover h-10 w-10" src="{{img_url profile_image size="xs"}}" alt="{{name}}">
                {{else}}
                    <span class="inline-block h-8 w-8 mr-1 text-heading dark:text-white">
                        {{> "icons/avatar"}}
                    </span>
                {{/if}}                                
            </a>            
        </div>
        {{/primary_author}}
        {{#if tags}}
            <div class="flex flex-wrap items-center justify-center mr-4 mb-3">
                {{#foreach tags limit="1"}}
                    <a href="{{url}}" title="{{name}}" class="text-white text-sm  mr-3  rounded px-2 py-1 bg-darklight transition-all">{{name}}</a>
                {{/foreach}}
            </div>
        {{/if}}
        <div class="flex items-center mr-8 mb-3">
            <span class="mr-2 icon-small">{{> "icons/calendar"}}</span>
            <time class="text-sm sm:text-base text-heading dark:text-white" datetime="{{date format="YYYY-MM-DD"}}">
                {{date format=" MMMM DD YYYY"}}
            </time>
        </div>
        <div class="flex items-center mb-3">
            <span class="mr-2 icon-small">{{> "icons/clock"}}</span>
            <span class="text-heading dark:text-white">{{reading_time}}</span>
        </div>
    </div>
    <h1 class="py-3 text-3xl sm:text-4xl md:text-5xl">{{title}}</h1>
</div>