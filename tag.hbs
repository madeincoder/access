{{!< default}}

{{#tag}}
    <div class="relative">
        {{#if feature_image}}
            <img class="w-full h-full absolute left-0 top-0 object-cover" src="{{img_url feature_image}}" alt="{{name}}"/>
        {{/if}}
        <div class="py-20 relative">
            <div class="container">
                <h1 class=" text-white" data-title="{{name}}">{{t "Category:"}} {{name}}</h1>
                {{#if description}}
                    <p class="max-w-xl text-white sm:text-lg">{{description}}</p>
                {{/if}}
            </div>
        </div>
    </div>
{{/tag}}

<div class="py-10 md:py-20">
    <div class="container">
        <div class="flex flex-wrap -mx-4 scroll-container">
            {{#foreach posts}}
                <div class="w-full sm:w-1/2 lg:w-1/3 py-4 px-3 lg:px-4 scroll-item">
                    {{> "post-card"}}
                </div>
            {{/foreach}}
        </div>
        <div class="text-center mt-10 pagination-wrap">
            {{pagination}}
            {{> "loadmore"}}
        </div>
    </div>
</div>
