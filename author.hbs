{{!< default}}
{{#author}}
<div class="py-5">
    <div class="container">
        <div class="flex flex-wrap items-center max-w-5xl mx-auto">
            <div class="w-full max-w-xs h-60 md:h-72 lg:h-96 md:w-1/3 bg-gray-50 relative">
                <div class="h-48 w-48 lg:h-64 lg:w-64 bg-primary -left-2 md:-left-4 -bottom-2 md:-bottom-4 absolute author-profile"></div>
                {{#if profile_image}}
    	            <img class="h-full w-full object-cover" src="{{img_url profile_image}}" alt="{{name}}'s Picture"/>
                {{else}}
                    <span class="h-full w-full absolute left-0 top-0 flex items-center justify-center text-gray-300">
                        <div class="h-44 w-44">
                            {{> "icons/avatar-large"}}
                        </div>
                    </span>
                {{/if}}
            </div>
            <div class="w-full md:w-2/3 md:mt-0 mt-10 md:pl-10">
                <div>
                    <h1 data-title="{{name}}">{{name}}</h1>
                    {{#if bio}}
                        <p class="pb-5">{{bio}}</p>
                    {{/if}}
                    <h4 class="text-primary border-b border-primary pb-3 mb-5" >{{plural ../pagination.total empty='No posts found!' singular='% Post' plural='% Posts'}}</h4>
                    {{#if facebook}}
                    <div class="inline-block">
                        <a href="{{facebook_url}}" target="_blank" class="mb-3 flex items-center px-3 rounded-md py-2 bg-facebook mr-2 text-white font-medium">
                            <span class="mr-1 flex items-center icon-small">{{> "icons/facebook"}}</span>
                            {{t "facebook"}}
                        </a>
                    </div>
                    {{/if}}
                    {{#if twitter}}
                    <div class="inline-block">
                        <a href="{{twitter_url}}" target="_blank" class="mb-3 flex items-center px-3 rounded-md py-2 bg-twitter mr-2 text-white font-medium">
                            <span class=" mr-2 icon-small">{{> "icons/twitter"}}</span>
                            {{t "twitter"}}
                        </a>
                    </div>
                    {{/if}}
                    {{#if website}}
                    <div class="inline-block">
                        <a href="{{website}}" target="_blank" class="mb-3 flex items-center px-3 rounded-md py-2 bg-heading dark:bg-darklight text-white font-medium">
                            <span class="mr-2 icon-small">{{> "icons/website"}}</span>
                            {{t "website"}}
                        </a>
                    </div>
                    {{/if}}
                    {{#if location}}
                    <p class="pt-5 flex items-center " >
                        <span class="text-primary mr-2 icon-small">{{> "icons/location"}}</span>
                        {{location}}
                    </p>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
{{/author}}


<div class="py-10 md:py-20">
    <div class="container">
        <div class="flex flex-wrap -mx-4 scroll-container">
            {{#foreach posts}}
                <div class="w-full sm:w-1/2 lg:w-1/3 py-4 px-3 lg:px-4 scroll-item">
                    {{> "post-card"}}
                </div>
            {{/foreach}}
        </div>
        <div class="text-center mt-10 pagination-wrap">
            {{pagination}}
            {{> "loadmore"}}
        </div>
    </div>
</div>
